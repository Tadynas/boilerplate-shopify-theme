{% schema %}
  {
    "name": "t:sections.map.name",
    "blocks": [
      {
        "type": "heading",
        "name": "t:sections.global.text.heading.label",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "text",
            "default": "Shop Now",
            "label": "t:sections.global.text.name"
          },
          {
            "type": "select",
            "id": "text_size",
            "default": "medium",
            "label": "t:sections.global.size.text.label",
            "options": [
              {
                "value": "small",
                "label": "t:sections.global.size.small.label"
              },
              {
                "value": "medium",
                "label": "t:sections.global.size.medium.label"
              },
              {
                "value": "large",
                "label": "t:sections.global.size.large.label"
              }
            ]
          }
        ]
      },
      {
        "type": "content",
        "name": "t:sections.global.text.content.label",
        "limit": 1,
        "settings": [
          {
            "type": "richtext",
            "id": "text",
            "default": "<p>Only today! Get best deals by purchasing from our new collection</p>",
            "label": "t:sections.global.text.name"
          }
        ]
      },
      {
        "type": "map",
        "name": "t:sections.map.name",
        "limit": 1,
        "settings": [
          {
            "type": "select",
            "id": "platform",
            "default": "google",
            "label": "t:sections.map.blocks.map.settings.platform.label",
            "options": [
              {
                "value": "google",
                "label": "t:sections.map.blocks.map.settings.platform.options.google.label"
              }
            ]
          },
          {
            "type": "text",
            "id": "api_key",
            "label": "t:sections.map.blocks.map.settings.api_key.label"
          },
          {
            "type": "image_picker",
            "id": "checkmark_icon",
            "label": "t:sections.map.blocks.map.settings.checkmark_icon.label"
          },
          {
            "type": "header",
            "content": "t:sections.map.blocks.map.settings.address_coordinates.content"
          },
          {
            "type": "text",
            "id": "latitude",
            "label": "t:sections.map.blocks.map.settings.latitude.label"
          },
          {
            "type": "text",
            "id": "longitude",
            "label": "t:sections.map.blocks.map.settings.longitude.label"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Map",
        "blocks": [
          {
            "type": "heading"
          },
          {
            "type": "content"
          },
          {
            "type": "map"
          }
        ]
      }
    ]
  }
{% endschema %}