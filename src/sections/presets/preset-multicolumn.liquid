{% schema %}
  {
    "name": "t:sections.multicolumn.name",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "t:sections.global.text.heading.label"
      },
      {
        "type": "select",
        "id": "heading_size",
        "default": "medium",
        "label": "t:sections.global.size.heading.label",
        "options": [
          {
            "value": "small",
            "label": "t:sections.global.size.small.label"
          },
          {
            "value": "medium",
            "label": "t:sections.global.size.medium.label"
          },
          {
            "value": "large",
            "label": "t:sections.global.size.large.label"
          }
        ]
      },
      {
        "type": "header",
        "content": "t:sections.multicolumn.settings.columns.content"
      },
      {
        "type": "select",
        "id": "column_alignment",
        "default": "center",
        "label": "t:sections.global.alignment.column.label",
        "options": [
          {
            "value": "left",
            "label": "t:sections.global.alignment.left.label"
          },
          {
            "value": "center",
            "label": "t:sections.global.alignment.center.label"
          },
          {
            "value": "right",
            "label": "t:sections.global.alignment.right.label"
          }
        ]
      },
      {
        "type": "range",
        "id": "number_of_columns",
        "min": 1,
        "max": 6,
        "step": 1,
        "default": 3,
        "label": "t:sections.multicolumn.settings.number_of_columns.label"
      },
      {
        "type": "header",
        "content": "t:sections.header.settings.mobile.content"
      },
      {
        "type": "checkbox",
        "id": "enable_slider",
        "label": "t:sections.multicolumn.settings.enable_slider.label"
      }
    ],
    "blocks": [
      {
        "type": "column",
        "name": "t:sections.multicolumn.blocks.column.name",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "t:sections.global.element.image.label"
          },
          {
            "type": "text",
            "id": "heading",
            "default": "Column",
            "label": "t:sections.global.text.heading.label"
          },
          {
            "type": "richtext",
            "id": "content",
            "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
            "label": "t:sections.global.text.content.label"
          },
          {
            "type": "header",
            "content": "t:sections.multicolumn.blocks.column.settings.link_button.content"
          },
          {
            "type": "text",
            "id": "t:sections.global.element.button.settings.label.label",
            "label": "Link Label"
          },
          {
            "type": "url",
            "id": "link_url",
            "label": "t:sections.global.element.button.settings.link.label"
          }
        ]
      },
      {
        "type": "button",
        "name": "t:sections.global.element.button.label",
        "settings": [
          {
            "type": "text",
            "id": "label",
            "default": "Get Deals",
            "label": "t:sections.global.element.button.settings.label.label"
          },
          {
            "type": "url",
            "id": "link",
            "label": "t:sections.global.element.button.settings.link.label"
          },
          {
            "type": "checkbox",
            "id": "fill",
            "label": "t:sections.global.element.button.settings.fill.label"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "t:sections.multicolumn.name"
      }
    ]
  }
{% endschema %}