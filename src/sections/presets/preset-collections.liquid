{% schema %}
  {
    "name": "t:sections.presets.collections.name",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "t:sections.global.text.heading.label"
      },
      {
        "type": "select",
        "id": "heading_size",
        "default": "medium",
        "label": "t:sections.global.size.heading.label",
        "options": [
          {
            "value": "small",
            "label": "t:sections.global.size.small.label"
          },
          {
            "value": "medium",
            "label": "t:sections.global.size.medium.label"
          },
          {
            "value": "large",
            "label": "t:sections.global.size.large.label"
          }
        ]
      },
      {
        "type": "range",
        "id": "number_of_columns",
        "min": 1,
        "max": 5,
        "step": 1,
        "default": 4,
        "label": "t:sections.main.collection_product_grid.settings.number_of_columns.label"
      },
      {
        "type": "select",
        "id": "image_ratio",
        "default": "default",
        "label": "t:sections.global.ratio.image.label",
        "options": [
          {
            "value": "default",
            "label": "t:sections.global.ratio.default.label"
          },
          {
            "value": "portrait",
            "label": "t:sections.global.ratio.portrait.label"
          },
          {
            "value": "square",
            "label": "t:sections.global.ratio.square.label"
          }
        ]
      }
    ],
    "blocks": [
      {
        "type": "collection",
        "name": "t:sections.presets.featured_collection.blocks.collection_grid.settings.collection.label",
        "settings": [
          {
            "type": "collection",
            "id": "collection",
            "label": "t:sections.presets.featured_collection.blocks.collection_grid.settings.collection.label"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "t:sections.presets.collections.name",
        "blocks": [
          {
            "type": "collection"
          },
          {
            "type": "collection"
          },
          {
            "type": "collection"
          }
        ]
      }
    ]
  }
{% endschema %}