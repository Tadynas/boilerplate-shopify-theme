<header class="header header--{{ section.settings.logo_position_desktop }}">
  <div class="container container--visible"> 
    <div class="header__container">
      <!-- Store Logo/Name-->
      <div class="header__image">
        {% if section.settings.logo_image %}
          {{ section.settings.logo_image | image_url: width: section.settings.logo_width | image_tag:
            alt: section.settings.logo_image.alt
          }}
        {% else %}
          <h3>{{ shop.name }}</h3>
        {% endif %}
      </div>
    <!-- Navigation -->
      <nav class="header__nav">
        {% for link in section.settings.menu.links %}
          <a href="{{ link.url }}">{{ link.title }}</a>
        {% endfor %}
      </nav>

      <div class="header__actions">
        <div>Search</div>
        <div>Cart</div>
      </div>

      <div class="burger-menu">
        <div class="burger-menu__line"></div>
        <div class="burger-menu__line"></div>
        <div class="burger-menu__line"></div>
      </div>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "t:sections.header.name",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "t:sections.global.element.menu.label" 
    },
    {
      "type": "header",
      "content": "t:sections.header.settings.logo.content"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "t:sections.header.settings.logo.image.label"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 48,
      "max": 240,
      "step": 16,
      "default": 96,
      "unit": "px",
      "label": "t:sections.header.settings.logo.width.label"
    },
    {
      "type": "select",
      "id": "logo_position_desktop",
      "default": "middle-left",
      "label": "t:sections.header.settings.logo.position.label.desktop",
      "options": [
        {
          "value": "top-left",
          "label": "t:sections.global.position.top_left.label"
        },
        {
          "value": "top-center",
          "label": "t:sections.global.position.top_center.label"
        },
        {
          "value": "middle-left",
          "label": "t:sections.global.position.middle_left.label"
        },
        {
          "value": "middle-center",
          "label": "t:sections.global.position.middle_center.label"
        }
      ]
    },
    {
      "type": "select",
      "id": "logo_position_mobile",
      "default": "center",
      "label": "t:sections.header.settings.logo.position.label.mobile",
      "options": [
        {
          "value": "left",
          "label": "t:sections.global.position.left.label"
        },
        {
          "value": "center",
          "label": "t:sections.global.position.center.label"
        }
      ]
    },
    {
      "type": "header",
      "content": "t:sections.header.settings.customization.content"
    },
    {
      "type": "checkbox",
      "id": "enable_sticky_header",
      "default": true,
      "label": "t:sections.header.settings.customization.enable_sticky_header.label"
    },
    {
      "type": "header",
      "content": "t:sections.header.settings.mobile.content"
    },
    {
      "type": "checkbox",
      "id": "show_socials",
      "default": true,
      "label": "t:sections.global.socials.show_socials.label"
    }
  ]
}
{% endschema %}