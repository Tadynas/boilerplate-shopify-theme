<div>
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'announcement' %}
        {% if block.settings.link %}
          <a href="{{ block.settings.link }}">{{ block.settings.text | escape }}</a>
        {% else %}
          <p>{{ block.settings.text | escape }}</p>
        {% endif %}
    {% endcase %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "Announcement Bar",
  "max_blocks": 3,
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Welcome to our store",
          "label": "Text"          
        },
        {
          "type": "select",
          "id": "text_alignment",
          "default": "center",
          "label": "Text Alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ]
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "announcement"
      }
    ]
  }
}
{% endschema %}